@using BulletinBoard.Web.Models
@model Announcement

@{
    ViewData["Title"] = "Announcement Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Created Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate.ToString("g")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @(Model.Status ? "Active" : "Inactive")
        </dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>

        <dt class="col-sm-2">SubCategory</dt>
        <dd class="col-sm-10">@Model.SubCategory</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
